            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
        </activity>


        <activity android:name=".module.login.LoginActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustNothing"
            />

        <activity android:name=".module.register.RegisterActivity"
                          android:screenOrientation="portrait"
                          android:windowSoftInputMode="adjustNothing"
        />


        <activity android:name=".module.register.SelectGenderActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustNothing"
            />
        <activity android:name=".module.register.EditRegisterCodeActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustNothing"
            />
        <activity android:name=".module.userinfo.EditUserDataActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustNothing"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>