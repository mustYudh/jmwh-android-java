<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F4F4F4"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <com.qsd.jmwh.view.NormaFormItemVIew
        app:length="11"
        android:id="@+id/phone"
        app:input_type="number"
        android:layout_marginTop="30dp"
        app:left_text="+86"
        app:hint_color="@color/color_AAAAAA"
        app:content_hint="请输入手机号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.qsd.jmwh.view.NormaFormItemVIew>

    <com.qsd.jmwh.view.NormaFormItemVIew
        app:length="6"
        app:input_type="number"
        android:id="@+id/get_ver_code"
        app:show_top_line="false"
        app:left_text="验证码"
        app:hint_color="@color/color_AAAAAA"
        app:content_hint="请输入收到的验证码"
        android:layout_width="match_parent"
        app:right_button_hint="发送验证码"
        android:layout_height="wrap_content">
    </com.qsd.jmwh.view.NormaFormItemVIew>


    <EditText
        android:id="@+id/old_pwd"
        android:hint="原密码"
        android:textSize="15sp"
        android:textColorHint="@color/color_AAAAAA"
        android:textColor="@color/color_333333"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="47dp"/>
    <View
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <EditText
        android:id="@+id/new_pwd"
        android:hint="新密码"
        android:textSize="15sp"
        android:textColorHint="@color/color_AAAAAA"
        android:textColor="@color/color_333333"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="47dp"/>
    <View
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <EditText
        android:id="@+id/again_pwd"
        android:hint="确认新密码"
        android:textSize="15sp"
        android:textColorHint="@color/color_AAAAAA"
        android:textColor="@color/color_333333"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="47dp"/>



    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/next"
        style="@style/app_blue_button"
        android:layout_marginTop="45dp"
        android:text="确定"
        />

</LinearLayout>