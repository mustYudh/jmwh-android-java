<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <View
      android:id="@+id/base_shadow"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#64000000"
      />

  <LinearLayout
      android:id="@+id/base_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="43dp"
      android:layout_marginRight="43dp"
      android:background="@drawable/shape_app_whit_bg_radious8"
      android:gravity="center|top"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp "
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/color_2A2A2A"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="14sp"
        android:visibility="gone"
        />


    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_underline_unselected"
        android:hint="输入现金金额"
        android:inputType="number"
        android:paddingBottom="9dp"
        android:paddingTop="22dp"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:visibility="gone"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="17dp"
        android:background="@color/color_DDDDDD"
        />


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="确定"
        android:textColor="@color/app_main_color"
        android:textSize="18sp"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD"
        />


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="取消"
        android:textColor="@color/app_main_color"
        android:textSize="18sp"
        />


    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD"
        android:visibility="gone"
        />


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="取消"
        android:textColor="@color/color_666666"
        android:textSize="18sp"
        android:visibility="gone"
        />

  </LinearLayout>

</RelativeLayout>