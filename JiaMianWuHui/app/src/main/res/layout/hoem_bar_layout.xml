<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="18dp"
        android:text="附近"
        android:textColor="@color/app_main_bg_color"
        android:visibility="visible">

    </TextView>


    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="1"
        android:background="@drawable/shape_circle_header_bg"
        android:gravity="center_vertical"
        android:maxWidth="195dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <EditText
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="搜索用户"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color_2A2A2A"
            android:textColorHint="@color/color_CCCCCC"
            android:textSize="14sp"/>


    </LinearLayout>


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/right_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="18dp"
        android:paddingRight="15dp"
        android:text="女士列表"
        android:textColor="@color/color_F43A50"
        android:textSize="16sp"/>

</LinearLayout>