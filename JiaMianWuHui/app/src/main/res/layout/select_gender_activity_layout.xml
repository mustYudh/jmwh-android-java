<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="你是..."
        android:textColor="@color/color_2A2A2A"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="65dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boy"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/select_gender_boy"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="男士"
                android:textColor="@color/color_2A2A2A"
                android:textSize="15sp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/girle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/select_gender_girl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="女士"
                android:textColor="@color/color_2A2A2A"
                android:textSize="15sp"/>


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="提示：选择性别后无法更改"
        android:textColor="@color/color_666666"/>


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/next"
        style="@style/app_blue_button"
        android:layout_marginTop="15dp"
        android:text="确定"
        />

</LinearLayout>