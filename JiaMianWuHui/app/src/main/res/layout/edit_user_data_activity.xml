<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F4F4F4"
            android:orientation="vertical"
            android:id="@+id/scroll_view"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="21dp"
            android:paddingBottom="20dp">



            <ImageView
                android:background="@drawable/shape_circle_header_bg"
                android:id="@+id/header"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                />

            <com.yu.common.ui.DelayClickTextView
                android:id="@+id/select_hint"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="上传头像"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:textColor="@color/color_2A2A2A"
                android:textSize="15sp"
                />
        </FrameLayout>


        <com.qsd.jmwh.view.NormaFormItemVIew
            android:id="@+id/sNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_hint="请填写"
            app:left_text="昵称"/>


        <com.qsd.jmwh.view.NormaFormItemVIew
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_hint="可以多选"
            app:left_text="约会范围"
            app:only_read="true"
            app:show_top_line="false"/>


        <com.qsd.jmwh.view.NormaFormItemVIew
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_hint="请选择"
            app:left_text="年龄"
            app:only_read="true"
            app:show_top_line="false"/>

        <com.qsd.jmwh.view.NormaFormItemVIew
            android:id="@+id/professional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_hint="请多选"
            app:left_text="职业"
            app:only_read="true"
            app:show_top_line="false"/>

        <com.qsd.jmwh.view.NormaFormItemVIew
            android:id="@+id/project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_hint="可以多选"
            app:left_text="约会节目"
            app:only_read="true"
            app:show_top_line="false"/>



        <LinearLayout
            android:id="@+id/social"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_F4F4F4"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="社交账号（最少填写1个）"
                android:textSize="13sp"/>

            <com.qsd.jmwh.view.NormaFormItemVIew
                android:id="@+id/we_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:content_hint="请填写"
                app:left_text="微信"/>

            <com.qsd.jmwh.view.NormaFormItemVIew
                android:id="@+id/qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:content_hint="请填写"
                app:show_top_line="false"
                app:left_text="QQ"/>


            <com.qsd.jmwh.view.UserItemView
                android:visibility="gone"
                android:id="@+id/switch_social"
                app:type="switch"
                app:showArrow="false"
                app:user_left_text="我的用户资料隐藏社交账号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F4F4F4"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="更多信息（选填）"
            android:textSize="13sp"/>







        <com.qsd.jmwh.view.NormaFormItemVIew
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_hint="请选择"
            app:left_text="身高"
            app:only_read="true"
            app:show_top_line="false"/>


        <com.qsd.jmwh.view.NormaFormItemVIew
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_hint="请选择"
            app:left_text="体重"
            app:only_read="true"
            app:show_top_line="false"/>

        <com.qsd.jmwh.view.NormaFormItemVIew
            android:visibility="gone"
            android:id="@+id/bust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_hint="请选择"
            app:left_text="胸围"
            app:only_read="true"
            app:show_top_line="false"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="13dp"
            android:paddingRight="15dp"
            android:paddingBottom="14dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:text="个人介绍"
                android:textColor="@color/color_2A2A2A"
                android:textSize="15sp"/>


            <EditText
                android:id="@+id/edit_sIntroduce"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="请填写"
                android:paddingRight="15dp"
                android:textColor="@color/color_2A2A2A"
                android:textColorHint="@color/color_AAAAAA"
                android:textSize="15sp"/>


        </LinearLayout>


        <com.yu.common.ui.DelayClickTextView
            android:id="@+id/login"
            style="@style/app_blue_button"
            android:layout_marginTop="30dp"
            android:text="进入假面舞会"
            />


        <LinearLayout
            android:paddingBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.yu.common.ui.DelayClickTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击进入表示你已经阅读并同意"
                android:textSize="12sp"/>


            <com.yu.common.ui.DelayClickTextView
                android:id="@+id/agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/app_main_bg_color"
                android:textSize="12sp"/>
        </LinearLayout>


    </LinearLayout>


</ScrollView>