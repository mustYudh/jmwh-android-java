<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F4F4F4"
            android:orientation="vertical"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="约会期望"
                android:textColor="@color/color_2A2A2A"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="可多选"
                android:textColor="#ffaaaaaa"
                android:textSize="15sp"
                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_EEEEEE"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="约会城市"
                android:textColor="@color/color_2A2A2A"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="选择城市"
                android:textColor="#ffaaaaaa"
                android:textSize="15sp"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="约会时间"
                android:textColor="@color/color_2A2A2A"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="选择日期"
                android:textColor="#ffaaaaaa"
                android:textSize="15sp"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="                 "
                android:textColor="@color/color_2A2A2A"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="选择时间"
                android:textColor="#ffaaaaaa"
                android:textSize="15sp"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="13dp"
            android:paddingRight="15dp"
            android:paddingBottom="14dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="补充说明"
                    android:textColor="@color/color_2A2A2A"
                    android:textSize="15sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="(选填)"
                    android:textColor="#AAAAAA"
                    android:textSize="15sp"/>


            </LinearLayout>


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="谈吐文明的人更受欢迎，请勿发布低俗、色情交易、或者曝光他人隐私的内容…"
                android:paddingRight="15dp"
                android:textColor="@color/color_2A2A2A"
                android:textColorHint="@color/color_AAAAAA"
                android:textSize="15sp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="13dp"
            android:paddingRight="15dp"
            android:paddingBottom="14dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="补充说明"
                    android:textColor="@color/color_2A2A2A"
                    android:textSize="15sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="(可不传)"
                    android:textColor="#AAAAAA"
                    android:textSize="15sp"/>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_EEEEEE"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="13dp"
            android:paddingBottom="14dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注：请勿上传裸露低俗的照片，严重者将封号处理。"
                android:textColor="@color/color_999999"
                android:textSize="15sp"/>


        </LinearLayout>


        <com.yu.common.ui.DelayClickTextView
            android:id="@+id/login"
            style="@style/app_blue_button"
            android:layout_marginTop="30dp"
            android:text="进入假面舞会"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="30dp">

            <com.yu.common.ui.DelayClickTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击进入表示你已经阅读并同意"
                android:textSize="12sp"/>


            <com.yu.common.ui.DelayClickTextView
                android:id="@+id/agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/app_main_bg_color"
                android:textSize="12sp"/>
        </LinearLayout>


    </LinearLayout>


</ScrollView>