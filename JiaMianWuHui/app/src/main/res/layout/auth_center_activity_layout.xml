<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/color_EEEEEE"
      android:orientation="vertical"
      >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="@color/white"
        >

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone"
          />


      <ImageView
          android:id="@+id/cover_img"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:scaleType="centerInside"
          android:src="@drawable/ic_auth_step"
          android:textSize="18sp"
          />

      <Button
          android:id="@+id/play_button"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_gravity="center"
          android:background="@drawable/ic_play_24dp"
          android:visibility="gone"
          />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="15dp"
          android:text="认证条件"
          android:textColor="@color/app_main_bg_color"
          android:textSize="18sp"
          android:textStyle="bold"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="15dp"
          android:text="1.个人形象良好;"
          android:textColor="@color/color_333333"
          android:textSize="13sp"
          />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="15dp"
          android:text="2.相册中最少上传了你本人的照片。"
          android:textColor="@color/color_333333"
          android:textSize="13sp"
          />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="15dp"
          android:text="认证方式"
          android:textColor="@color/app_main_bg_color"
          android:textSize="18sp"
          android:textStyle="bold"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="15dp"
          android:text="1.取一张纸,写上你的昵称和以下验证码;"
          android:textColor="@color/color_333333"
          android:textSize="13sp"
          />


      <TextView
          android:id="@+id/auth_code"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="15dp"
          android:text="假面舞会 888888"
          android:textColor="#ffe56777"
          android:textSize="20sp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="15dp"
          android:text="2.拿着这张纸,与你的正脸合拍一段视频\n  (3~15s)。"
          android:textColor="@color/color_333333"
          android:textSize="13sp"
          />


    </LinearLayout>


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/uploading"
        android:layout_marginTop="35dp"
        android:text="上传认证视频"
        style="@style/app_blue_button"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:text="认证成功后，你的头像旁边会带有[真实]标识"
        android:textSize="14sp"
        />

  </LinearLayout>
</ScrollView>