<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qsd.jmwh.view.NormaFormItemVIew
        android:id="@+id/account"
        android:layout_marginTop="30dp"
        app:show_bottom_line="false"
        app:length="11"
        app:input_type="number"
        app:left_text="登录账号"
        app:content_hint="请输入手机号/账号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </com.qsd.jmwh.view.NormaFormItemVIew>


    <com.qsd.jmwh.view.NormaFormItemVIew
        android:id="@+id/password"
        app:left_text="登录密码"
        app:content_hint="请输入密码"
        app:input_type="password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.qsd.jmwh.view.NormaFormItemVIew>


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/login"
        style="@style/app_blue_button"
        android:layout_marginTop="35dp"
        android:text="登录"
        />


    <LinearLayout

        android:layout_gravity="center"
        android:paddingBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:id="@+id/agree_agreement_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.yu.common.ui.DelayClickImageView
                android:id="@+id/agree_agreement"
                android:src="@drawable/button_selected"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </FrameLayout>


        <com.yu.common.ui.DelayClickTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读同意"
            android:textSize="12sp"/>


        <com.yu.common.ui.DelayClickTextView
            android:id="@+id/agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="@color/app_main_bg_color"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>