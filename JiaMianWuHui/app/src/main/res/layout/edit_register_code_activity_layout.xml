<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="提示"
            android:textColor="@color/color_333333"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="为保证男士素质，注册需要提供邀请码"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="46dp"
            android:background="@drawable/edit_ver_code_bg"
            android:gravity="center"
            android:hint="输入邀请码"/>


        <com.yu.common.ui.DelayClickTextView
            android:id="@+id/login"
            style="@style/app_blue_button"
            android:layout_marginTop="20dp"
            android:text="登录"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="没有邀请码？您可以通过以下方式获得"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="47dp"
            android:layout_marginRight="13dp">

            <TextView
                android:id="@+id/fs_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="方式1:"
                android:textColor="@color/color_222222"
                android:textSize="13sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/fs_01"
                android:text="免费申请"
                android:textColor="@color/app_main_bg_color"
                android:textSize="15sp"/>


            <com.yu.common.ui.DelayClickTextView
                android:id="@+id/to_register"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_app_main_button_bg"
                android:gravity="center"
                android:text="马上申请"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fs_01"
                android:layout_marginTop="17dp"
                android:lineSpacingMultiplier='1.2'
                android:text="你需要填写一些个人资料，审核通过后会给你发送邀请码。"
                android:textColor="@color/color_666666"
                android:textSize="13sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/to_register"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginRight="16dp"
                android:text="查收邀请码"
                android:textColor="@color/color_666666"
                android:textSize="13sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="47dp"
            android:layout_marginRight="13dp">

            <TextView
                android:id="@+id/fs_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="方式2:"
                android:textColor="@color/color_222222"
                android:textSize="13sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/fs_02"
                android:text="开通会员"
                android:textColor="@color/app_main_bg_color"
                android:textSize="15sp"/>


            <com.yu.common.ui.DelayClickTextView
                android:id="@+id/to_by"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_app_main_button_bg"
                android:gravity="center"
                android:text="马上开通"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fs_02"
                android:layout_marginTop="17dp"
                android:lineSpacingMultiplier='1.2'
                android:text="开通会员可享受各种特权，包括无需邀请码注册。"
                android:textColor="@color/color_666666"
                android:textSize="13sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/to_by"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginRight="3dp"
                android:text="我已经付费开通"
                android:textColor="@color/color_666666"
                android:textSize="13sp"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>